extends base.pug

block content 
  div   
    video#preview
    button#startBtn Start Recodeing
  if errorMessage
    span=errorMessage 

  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file" accept="video/*" id="video", name="video", required)
    label(for="title") Title
    input(placeholder="Title", id="video", name="title", type="text", required minlength=5 maxlength=80)
    label(for="description") Description
    input(placeholder="Description", id="description", name="description", type="text", required minlength=10)
    label(for="hashtags") Hashtags
    input(placeholder="Hashtags, separated by comma", id="hashtags", name="hashtags", type="text", required)
    input(type="submit", id="video", value="Upload Video")

  
block scripts   
  script(src="/static/js/recoder.js")