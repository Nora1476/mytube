header 
  a(href="/").header__logo
    i.fab.fa-youtube

  nav 
    ul 

    
      //- 로그인했을때 nav bar 다르게 설정
      if loggedIn
        li 
          a(href="/videos/upload") Upload Video 
        li 
          a(href="/users/edit") Edit Profile 
        li 
          a(href="/users/logout") Log out  
        li 
          a(href=`/users/${loggedInUser._id}`) 
            if loggedInUser.avatarUrl === ""
              span 😊
            else 
              img.header__avatar(src=loggedInUser.avatarUrl alt="img", crossorigin)
      else
        li 
          a(href="/login") Log In
        li 
          a(href="/join").header__btn Join
      
      li 
      a(href="/search")
        i.fas.fa-search
         
