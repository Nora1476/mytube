extends base


block content
  div#videoContainer
    video(src="/"+video.fileUrl, width="100%")
    div  
      button#play Play
      button#mute Mute
      input(type="range" step="0.1" value="0.5" min="0" max="1")#volume
      div
        span#currentTime 00:00:00
        span / 
        span#totalTime 00:00:00
      div 
        input(type="range" step="1" value="0" min="0" )#timeline 
      div
        button#fullScreen Enter Full Ccreen
  //- 
    div   
      p=video.description
      small=video.createdAt 

    div  
      small Uploaded by 
        a(href=`/users/${video.owner._id}`)=video.owner.name
    
    <br>
      
      if String(video.owner._id) === String(loggedInUser._id)
        //- 제일앞에 /가있으면 절대경로임 경로 지정시 주의
        //- a(href="/video/edit")--->localhost:4000/video/edit
        //- a(href="video/edit")--->localhost:4000/videos/video/edit
        a(href=`${video.id}/edit`) Edit Video &rarr;
        <br>
        a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts
  script(src="/static/js/videoPlayer.js")